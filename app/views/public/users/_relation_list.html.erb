<table class="table table-hover">
  <% relations.eager_load([:articles]).each do |relation| %>
    <tbody>
      <tr>
        <th scope="row">
          <%= attachment_image_tag relation, :image, size: "50x50", fallback: "no_image.jpg", style: "border-radius: 18px;" %> 
          <%= link_to public_user_path(relation) do %>
            <%= relation.name %>
          <% end %>
        </th>
        <td>投稿記事数：<%= relation.articles.count %></td>
        <td>最終投稿日時：<%= l relation.articles.last.created_at if relation.articles.any? %></td>
      </tr>
    </tbody>
  <% end %>      
</table>